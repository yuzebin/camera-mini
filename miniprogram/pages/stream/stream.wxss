.container {
  height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
}

.player {
  width: 100%;
  height: 50vh;
}

.controls {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  gap: 20rpx;
}

.control-item {
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.info-panel {
  flex: 1;
  background: #fff;
  padding: 30rpx;
}

.info-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.online {
  background: #e8f5e9;
  color: #4caf50;
}

.offline {
  background: #ffebee;
  color: #f44336;
}